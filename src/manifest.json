{
	"manifest_version": 1,
	"type":"WebApp",
	"meta":{
		"name": "PUBG Headhunt",
		"version": "0.1.0",
		"minimum-overwolf-version": "0.126.0",
		"author": "FallInMyHand",
		"icon": "logo.png",
		"icon_gray": "logo_gray.png",
		"window_icon": "icon.ico",
		"launcher_icon": "icon.ico",
		"description": ""
	},
	"permissions": [
		"FileSystem",
		"Hotkeys"
	],
	"data": {
		"game_targeting": {
			"type": "dedicated",
			"game_ids": [10906]
		},
		"game_events": [10906],
		"launch_events": [{
			  "event": "GameLaunch",
			  "event_data": {
				"game_ids": [10906]
			  },
			  "start_minimized": false
		}],
		"start_window":"background",
		"windows": {
			"background": {
				"file":"windows/background.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": false,
				"size": {
					"width":700,
					"height":400
					},
				"min_size": {
					"width":400,
					"height":400
				}
			},
			"statistic": {
				"file":"windows/statistic.html",
				"transparent":true,
				"resizable":false,
				"size":{
					"width": 400,
					"height": 300
				},
				"in_game_only":true
			},
			"overlay": {
				"file": "windows/overlay.html",
				"transparent": true,
				"resizable": false,
				"size": {
					"width": 420,
					"height": 125
				},
				"start_position": {
					"top": 20,
					"left": 20
				},
				"keep_window_location": true,
				"in_game_only": true
			},
			"settings": {
				"file": "windows/settings.html",
				"transparent": false,
				"resizable": false,
				"size": {
					"width": 400,
					"height": 700
				},
				"start_position": {
					"top": 20,
					"left": 20
				}
			},
			"roster": {
				"file": "windows/roster.html",
				"transparent": false,
				"resizable": true,
				"size": {
					"width": 400,
					"height": 800
				},
				"start_position": {
					"top": 150,
					"left": 20
				}
			}
		},
		"hotkeys": {
			"toggle_roster": {
				"title": "Toggle roster window",
				"action-type": "custom",
				"default": "Shift+F1"
			},
			"settings": {
				"title": "Show settings",
				"action-type": "custom",
				"default": "Shift+F2"
			}
		},
		"extra-objects": {
			"simple-io-plugin": {
				"file": "plugins/simple-io-plugin.dll",
				"class": "overwolf.plugins.SimpleIOPlugin"
			  }
		},
		"externally_connectable": {
			"matches": [
				"http://*.overwolf.com",
				"https://*.overwolf.com",
				"https://9d83ymjka8.execute-api.us-east-1.amazonaws.com",
				"https://api.pubg.com"
			]
		}
	}
}
