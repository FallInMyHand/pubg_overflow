{
	"manifest_version": 1,
	"type":"WebApp",
	"meta":{
		"name": "PUBG Headhunt",
		"version": "0.1.1",
		"minimum-overwolf-version": "0.126.0",
		"author": "FallInMyHand",
		"icon": "logo.png",
		"icon_gray": "logo_gray.png",
		"window_icon": "logo256.png",
		"launcher_icon": "icon.ico",
		"description": ""
	},
	"permissions": [
		"FileSystem",
		"Hotkeys"
	],
	"data": {
		"game_targeting": {
			"type": "dedicated",
			"game_ids": [10906]
		},
		"game_events": [10906],
		"launch_events": [{
			  "event": "GameLaunch",
			  "event_data": {
				"game_ids": [10906]
			  },
			  "start_minimized": false
		}],
		"start_window":"background",
		"windows": {
			"background": {
				"file":"windows/background.html",
				"resizable": false,
				"show_in_taskbar": false,
				"is_background_page": true
			},
			"help": {
				"file": "windows/help.html",
				"resizable": true,
				"size":{
					"width": 800,
					"height": 600
				}
			},
			"statistic": {
				"file":"windows/statistic.html",
				"transparent":true,
				"resizable":false,
				"size":{
					"width": 400,
					"height": 300
				},
				"in_game_only":true
			},
			"overlay": {
				"file": "windows/overlay.html",
				"transparent": true,
				"resizable": false,
				"clickthrough": true,
				"size": {
					"width": 420,
					"height": 125
				},
				"start_position": {
					"top": 20,
					"left": 20
				},
				"keep_window_location": true,
				"in_game_only": true
			},
			"settings": {
				"file": "windows/settings.html",
				"transparent": true,
				"resizable": false,
				"native_window": true,
				"show_maximize": false,
				"show_minimize": false,
				"is_alt_f4_blocked": true,
				"size": {
					"width": 400,
					"height": 200
				},
				"start_position": {
					"top": 300,
					"left": 420
				}
			},
			"roster": {
				"file": "windows/roster.html",
				"transparent": true,
				"resizable": true,
				"size": {
					"width": 400,
					"height": 800
				},
				"start_position": {
					"top": 150,
					"left": 20
				}
			},
			"map": {
				"file": "windows/map.html",
				"transparent": false,
				"resizable": true,
				"size": {
					"width": 1920,
					"height": 1080
				},
				"start_position": {
					"top": 0,
					"left": 0
				}
			}
		},
		"hotkeys": {
			"toggle_overlay": {
				"title": "Toggle overlay",
				"action-type": "custom",
				"default": "Shift+F1"
			},
			"toggle_roster": {
				"title": "Toggle roster window",
				"action-type": "custom",
				"default": "Shift+F2"
			},
			"toggle_map": {
				"title": "Show map",
				"action-type": "custom",
				"default": "Shift+F3"
			},
			"toggle_settings": {
				"title": "Show settings",
				"action-type": "custom",
				"default": "Shift+F4"
			}
		},
		"extra-objects": {
			"simple-io-plugin": {
				"file": "plugins/simple-io-plugin.dll",
				"class": "overwolf.plugins.SimpleIOPlugin"
			  }
		},
		"externally_connectable": {
			"matches": [
				"http://*.overwolf.com",
				"https://*.overwolf.com",
				"https://9d83ymjka8.execute-api.us-east-1.amazonaws.com",
				"https://api.pubg.com"
			]
		}
	}
}
