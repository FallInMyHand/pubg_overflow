{
	"manifest_version": 1,
	"type":"WebApp",
	"meta":{
		"name":"Score",
		"version":"0.0.3",
		"minimum-overwolf-version":"0.77.10",
		"author":"FallInMyHand",
		"icon":"cat.png",
		"icon_gray":"cat.png",
		"description":""
	},
	"permissions": [
		"FileSystem"
	],
	"data": {
		"game_events": [10906],
		"start_window":"background",
		"windows": {
			"background": {
				"file":"windows/background/background.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": false,
				"size": {
					"width":700,
					"height":400
					},
				"min_size": {
					"width":400,
					"height":400
				}
			},
			"statistic": {
				"file":"windows/statistic/statistic.html",
				"transparent":true,
				"resizable":false,
				"size":{
					"width":400,
					"height":300
				},
				"in_game_only":true
			},
			"overlay": {
				"file": "windows/overlay/overlay.html",
				"transparent": true,
				"resizable": false,
				"size": {
					"width": 400,
					"height": 70
				},
				"start_position": {
					"top": 20,
					"left": 20
				},
				"keep_window_location": true,
				"in_game_only": true
			},
			"settings": {
				"file": "windows/settings.html",
				"transparent": false,
				"resizable": false,
				"size": {
					"width": 400,
					"height": 700
				},
				"start_position": {
					"top": 20,
					"left": 20
				}
			}
		},
		"extra-objects": {
			"simple-io-plugin": {
				"file": "plugins/simple-io-plugin.dll",
				"class": "overwolf.plugins.SimpleIOPlugin"
			  }
		},
		"externally_connectable": {
			"matches": [
				"http://*.overwolf.com",
				"https://*.overwolf.com",
				"https://9d83ymjka8.execute-api.us-east-1.amazonaws.com",
				"https://api.pubg.com"
			]
		}
	}
}
